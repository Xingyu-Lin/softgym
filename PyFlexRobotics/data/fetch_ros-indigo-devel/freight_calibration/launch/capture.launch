<launch>

  <node pkg="robot_calibration" type="calibrate" name="robot_calibration"
        args="$(find freight_calibration)/config/calibration_poses.bag"
        output="screen" required="true">
    <rosparam file="$(find freight_calibration)/config/capture.yaml" command="load" />
    <rosparam file="$(find freight_calibration)/config/calibrate.yaml" command="load" />
  </node>

  <node pkg="rosbag" type="record" name="calibration_bagger" output="screen"
        args="--bz2 -o /tmp/freight_calibration/calibration_data calibration_data robot_description" >
    <param name="mkdir_tmp" command="mkdir -m 777 -p /tmp/freight_calibration" />
  </node>

</launch>
